<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="flickr gadget" title_url="https://github.com/volna80/flickr-gadget" author="Nikolay Volnov" author_email="nikolay.volnov@gmail.com">
        <Require feature="wave" />
        <Require feature="dynamic-height" />
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <!DOCTYPE html>
        <html>
            <style>
                * {
                    padding: 0;
                    margin: 0;
                }

                body {
                    padding: 3px;
                }

                .content {
                    cursor: pointer;
                }
            </style>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
            <script src="https://raw.github.com/volna80/flickr-gadget/master/gadget.js"></script>
          <body>


<table width="100%">
      <tr>
        <td width="50%">
          <img id="img_placeholder" />
        </td>
        <td>
          <table id="form" style="display:none;">
            <tr><td title="The url to the user's profile or photos page.">user's profile url</td><td><input id="username" value="" /></td></tr>
            <tr><td>user's photoset</td><td><select id="sets" /><br/></td></tr>
            <tr>
              <td title="photo size">size</td>
              <td><select id="photo_size">
                <option value="s">small square (75x75)</option>
                <option value="q">large square (150x150)</option>
                <option value="t">thumbnail, (100) </option>
                <option value="m">small (240) </option>
                <option value="n">small (320)</option>
                <option value="z">medium (640)</option>
                <option value="c">medium (800)</option>
              </select></td>
            </tr>
            <tr>
              <td>mode</td>
              <td>
                <select id="mode">
                  <option value="firstPhotos" title="the gadget will show first photo from the photoset">first in set</option>
                  <option value="lastPhotos" title="the gadget will show latest photo from the photoset">last in set</option>
                  <option value="randomPhotos" title="the gadget will show a random photo from the photoset" >random</option>
                </select>
              </td>
            </tr>
            <tr>
              <td colspan="2" align="right">
                <button id="save" >save</button>
              </td>
            </tr>
            <tr>
              <td colspan="2" align="right">v.0.3</td>
            </tr>
          </table>
        </td>
      </tr>
    </table>

           </body>
        </html>
    ]]>
    </Content>
</Module>
