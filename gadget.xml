<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="flickr gadget" title_url="https://github.com/volna80/flickr-gadget" author="Nikolay Volnov" author_email="nikolay.volnov@gmail.com">
        <Require feature="wave" />
        <Require feature="dynamic-height" />
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <!DOCTYPE html>
        <html>
            <style>
                * {
                    padding: 0;
                    margin: 0;
                }

                body {
                    padding: 3px;
                }

                .content {
                    cursor: pointer;
                }
            </style>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
            <script src="https://raw.github.com/volna80/flickr-gadget/master/gadget.js"></script>
          <body>
               <div id="loading" style="display:none">Loading ...</div>
               <select id="sets" style="display:none" />
               <input id="username" value="" />
               <button id="go" >add</button>
               <img id="img_placeholder" />
           </body>
        </html>
    ]]>
    </Content>
</Module>
